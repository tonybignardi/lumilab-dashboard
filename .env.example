################################
# LOCAL DATABASE (Destination)
################################
# MySQL database where Lumilab will store learning analytics data
DB_HOST=localhost        # MySQL server host (localhost for local development)
DB_PORT=3306            # MySQL default port (usually 3306)
DB_NAME=lumix           # Create this database name in your MySQL
DB_USER=root            # MySQL user (root for local dev, restricted user for production)
DB_PASSWORD=            # MySQL password (empty for local dev with no password)

################################
# MOODLE DATABASE (Source)
################################
# PostgreSQL connection to your Moodle installation
# Lumilab will READ data from here (not write)
MOODLE_DB_TYPE=pgsql                # Type: PostgreSQL
MOODLE_DB_HOST=localhost             # Moodle PostgreSQL server host
MOODLE_DB_PORT=5432                 # PostgreSQL default port
MOODLE_DB_NAME=m24                  # Moodle database name
MOODLE_DB_USER=postgres             # PostgreSQL user
MOODLE_DB_PASSWORD=master           # PostgreSQL password

################################
# LEGACY LUMINA DATABASE (Optional)
################################
# If you have an older Lumina installation to migrate from
LUMINA_DB_TYPE=pgsql               # Type: PostgreSQL
LUMINA_DB_HOST=localhost            # Legacy database host
LUMINA_DB_PORT=5003                # Legacy database port
LUMINA_DB_NAME=dbsigaedu          # Legacy database name
LUMINA_DB_USER=postgres            # Legacy database user
LUMINA_DB_PASSWORD=1234            # Legacy database password

################################
# APPLICATION SETTINGS
################################
APP_DEBUG=true                     # Set to false in production
APP_ENV=development                # Set to 'production' for live deployment
APP_PATH=/lumilab                  # Application path (e.g., /lumilab, /, /analytics)
